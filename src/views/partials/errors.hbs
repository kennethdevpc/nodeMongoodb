{{#if error}}
  <div
    class='alert alert-danger alert-dismissible fade show px-2 d-flex justify-content-between'
    role='alert'
  >
    {{error}}
    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'>
      <span aria-hidden='true'>&times;</span>
    </button>
  </div>

{{/if}}
{{#each errors}}
  <div
    class='alert alert-danger alert-dismissible fade show px-2 d-flex justify-content-between'
    role='alert'
  >
    {{text}}
    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'>
      <span aria-hidden='true'>&times;</span>
    </button>
  </div>

{{/each}}